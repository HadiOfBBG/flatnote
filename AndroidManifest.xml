<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.androsz.flatnote" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="11" android:targetSdkVersion="11" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />

	<supports-screens android:smallScreens="false"
		android:normalScreens="false" android:largeScreens="false"
		android:xlargeScreens="true" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:hardwareAccelerated="true">
		<activity android:name=".HomeActivity" android:label="@string/app_name"
			showAsAction="ifRoom" android:theme="@android:style/Theme.Holo">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

	</application>
</manifest>