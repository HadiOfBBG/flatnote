<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="400dip">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/name" android:layerType="software"></TextView>
	<EditText android:layout_height="wrap_content" android:id="@+id/notebook_name"
		android:layout_width="match_parent" android:inputType="textCapWords|textShortMessage" android:layout_gravity="center_horizontal" android:maxLines="1"></EditText>
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/color"></TextView>
	<com.androsz.flatnote.app.widget.ColorPickerView
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/notebook_color"/>
</LinearLayout>
